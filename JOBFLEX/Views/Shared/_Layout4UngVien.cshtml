<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobFlex</title>
      <link rel="stylesheet" href="~/css/Header4UngVien.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="header-content">
                <div class="logo-container">
                    <button class="menu-toggle" type="button" aria-haspopup="dialog" aria-expanded="false">
                     <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-icon">
                        <line x1="4" x2="20" y1="12" y2="12"></line>
                        <line x1="4" x2="20" y1="6" y2="6"></line>
                        <line x1="4" x2="20" y1="18" y2="18"></line>
                    </svg>
                        <span class="sr-only">Toggle menu</span>
                    </button>
                <a href="/" class="logo-link">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="briefcase-icon">
                        <path d="M16 20V4a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
                        <rect width="20" height="14" x="2" y="6" rx="2"></rect>
                    </svg>
                    <span class="logo-text">Job<span class="logo-text-blue">Flex</span></span>
                </a>
                </div>
                <nav class="main-nav">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">Trang chủ</a>
                    <a asp-area="" asp-controller="Jobs" asp-action="Index" class="nav-link">Tìm việc</a>
                    <a asp-area="" asp-controller="Applications" asp-action="Index" class="nav-link">Đơn ứng tuyển</a>
                    <a asp-area="" asp-controller="Freelance" asp-action="Index" class="nav-link">Công việc đã lưu</a>
                    <a asp-area="" asp-controller="Schedule" asp-action="Index" class="nav-link">Lịch làm việc</a>
                    <a asp-area="" asp-controller="Messages" asp-action="Index" class="nav-link">Tin nhắn</a>
                    <a asp-area="" asp-controller="Reports" asp-action="Index" class="nav-link">Báo cáo</a>
                </nav>
                <div class="user-actions">
                    <button class="notification-btn" type="button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="bell-icon">
                            <path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"></path>
                            <path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"></path>
                        </svg>
                        <span class="notification-indicator"></span>
                        <span class="sr-only">Thông báo</span>
                    </button>
                    <button class="avatar-btn" type="button" id="user-menu" aria-haspopup="menu" aria-expanded="false">
                        <span class="avatar-container">
                            <img class="avatar-img" alt="Avatar" src="https://via.placeholder.com/32x32?text=User" />
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div>© @DateTime.Now.Year - JobFlex</div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const menuToggle = document.querySelector('.menu-toggle');
            const mainNav = document.querySelector('.main-nav');

            menuToggle.addEventListener('click', function () {
                mainNav.classList.toggle('active');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>