@model List<HeThongTimViec.Models.User>
@{
    ViewData["Title"] = "Danh sách người dùng";
    Layout = "~/Views/Shared/_Layout4UngVien.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Danh sách người dùng</title>
    <style>
        table { border-collapse: collapse; width: 100%; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background-color: #f2f2f2; }
    </style>
</head>
<body>
    <h1>Danh sách người dùng</h1>
    <table>
        <tr>
            <th>UserId</th>
            <th>Họ Tên</th>
            <th>Giới Tính</th>
            <th>Email</th>
            <th>Facebook Link</th>
            <th>SDT</th>
            <th>Thành Phố</th>
            <th>Vai Trò</th>
            <th>Trạng Thái</th>
            <th>Ngày Tạo</th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.HoTen</td>
                <td>@user.GioiTinh</td>
                <td>@user.Email</td>
                <td>@user.FacebookLink</td>
                <td>@user.SDT</td>
                <td>@user.ThanhPho</td>
                <td>@user.VaiTro</td>
                <td>@user.TrangThai</td>
                <td>@user.NgayTao.ToString("yyyy-MM-dd HH:mm:ss")</td>
            </tr>
        }
    </table>
</body>
</html>