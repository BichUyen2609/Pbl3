@using Microsoft.AspNetCore.Http
@using HeThongTimViec.Models
@using System.Security.Claims
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ Thống Tìm Việc JOBLEX</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Custom CSS (Đặt SAU Bootstrap) -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    @* Keep this if it contains component-specific styles *@
    <link rel="stylesheet" href="~/HeThongTimViec.styles.css" asp-append-version="true" />

    @* --- Removed Inline Custom CSS block --- *@

    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    @* Header utilizes navbar styles from site.css *@
    <header>
        @* Keep bg-white for contrast with cream body, mb-3 might be optional depending on main padding *@
        <nav class="navbar navbar-expand-lg navbar-light bg-white mb-3">
            <div class="container-fluid">
                @* --- BRAND LINK - Uses .navbar-brand styles from site.css --- *@
                <a class="navbar-brand me-4" asp-area="" asp-controller="Dashboard" asp-action="Index">
                    <i class="fa-solid fa-briefcase text-primary me-2"></i> @* Use text-primary for icon color consistency *@
                    <span>JOBLEX</span>
                </a>
                @* --- END BRAND LINK --- *@

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-lg-inline-flex">
                    @* Left Navigation - Uses .nav-link styles from site.css *@
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 align-items-center"> @* Added align-items-center for vertical alignment *@
                        @{
                            bool dangLaNTDCaNhan = HttpContextAccessor.HttpContext?.Session.GetInt32("DangLaNTD") == 1;
                        }

                        <li class="nav-item">
                            @* Removed .text-dark, uses default nav-link color now *@
                            <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">
                                <i class="fa-solid fa-table-columns fa-fw me-1"></i>Trang chủ
                            </a>
                        </li>

                        @if (!dangLaNTDCaNhan) // == Role Ứng viên
                        {
                            <li class="nav-item">
                                @* Changed btn-success to btn-secondary (light teal), kept btn-sm *@
                                <a class="btn btn-sm btn-secondary me-2" asp-controller="TimViec"
                                    asp-action="Index">
                                    <i class="fa-solid fa-magnifying-glass me-1"></i>Tìm Việc Làm
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="CaNhan" asp-action="Index">
                                    <i class="fa-regular fa-file-lines fa-fw me-1"></i>Hồ sơ của tôi
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="UngVien" asp-controller="ViecLam" asp-action="DaUngTuyen">
                                    <i class="fa-solid fa-paper-plane fa-fw me-1"></i>Việc đã ứng tuyển
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="UngVien" asp-controller="ViecLam" asp-action="DaLuu">
                                    <i class="fa-regular fa-bookmark fa-fw me-1"></i>Việc đã lưu
                                </a>
                            </li>
                        }
                        else // == Role Nhà tuyển dụng
                        {
                            <li class="nav-item">
                                @* Changed btn-info to btn-accent (coral), kept btn-sm *@
                                <a class="btn btn-sm btn-accent me-2" asp-controller="IndividualPosting" asp-action="Create">
                                    <i class="fa-solid fa-plus me-1"></i>Đăng Tin Mới
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link"asp-controller="IndividualPosting" asp-action="Index">
                                    <i class="fa-solid fa-list-check fa-fw me-1"></i>Quản lý Tin đăng
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link"asp-controller="UngVien" asp-action="QuanLy">
                                    <i class="fa-solid fa-users fa-fw me-1"></i>Quản lý Ứng viên
                                </a>
                            </li>
                        }
                    </ul>

                    @* Right Navigation - Uses .nav-link styles from site.css *@
                    <ul class="navbar-nav align-items-center"> @* Added align-items-center *@
                        <li class="nav-item">
                            @* Removed .text-dark, added mx-1 for spacing *@
                            <a class="nav-link position-relative mx-1 hover-grow" asp-area="" asp-controller="TinNhan"
                                asp-action="Index" title="Tin nhắn">
                                <i class="fa-regular fa-envelope fs-5"></i>
                                @* Potential Badge - Style using Bootstrap badge classes if uncommented *@
                                @* <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">9+ <span class="visually-hidden">unread messages</span></span> *@
                            </a>
                        </li>
                        <li class="nav-item">
                            @* Removed .text-dark, added mx-1 for spacing *@
                            <a class="nav-link position-relative mx-1 hover-grow" asp-area="" asp-controller="ThongBao"
                                asp-action="Index" title="Thông báo">
                                <i class="fa-regular fa-bell fs-5"></i>
                                @* Potential Badge - Style using Bootstrap badge classes if uncommented *@
                                @* <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle"><span class="visually-hidden">New alerts</span></span> *@
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            @* Removed .text-dark *@
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownUser" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-regular fa-circle-user me-1 fs-5"></i>
                                @User.FindFirstValue(ClaimTypes.Name)
                            </a>
                            @* Dropdown uses .dropdown-menu styles from site.css *@
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownUser">
                                <li>
                                    <form asp-area="" asp-controller="TaiKhoan" asp-action="ChuyenDoiVaiTro"
                                        method="post">
                                        <button type="submit" class="dropdown-item">
                                            <i class="fa-solid fa-repeat fa-fw me-2"></i>Chuyển sang @(dangLaNTDCaNhan ?
                                                                                        "Ứng viên" : "Nhà tuyển dụng")
                                        </button>
                                    </form>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="TaiKhoan" asp-action="CaiDat">
                                        <i class="fa-solid fa-gear fa-fw me-2"></i>Cài Đặt Tài Khoản
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <form asp-area="" asp-controller="TaiKhoan" asp-action="DangXuat" method="post">
                                        <button type="submit" class="dropdown-item">
                                            <i class="fa-solid fa-arrow-right-from-bracket fa-fw me-2"></i>Đăng Xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @* Main content area uses padding from site.css body/main rules *@
    <main role="main">
        <div class="container"> @* Keep content within container *@
            @RenderBody()
        </div>
    </main>

    @* Footer uses .footer styles from site.css *@
    <footer class="footer"> @* Removed original classes, added .footer *@
        <div class="container">
            <div class="row gy-4"> @* Use grid for potential multi-column footer *@
                <div class="col-lg-6 col-md-12 footer-info">
                    <a href="#" class="logo d-flex align-items-center mb-3">
                        <i class="fa-solid fa-briefcase me-2 fs-4"></i>
                        <span>JOBLEX</span>
                    </a>
                    <p>Hệ thống tìm kiếm việc làm bán thời gian, thời vụ hàng đầu. Kết nối ứng viên và nhà tuyển dụng
                        hiệu quả.</p>
                    <div class="social-icons mt-3">
                        <a href="#" class="twitter"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="instagram"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="linkedin"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

                <div class="col-lg-3 col-6 footer-links">
                    <h5>Liên kết hữu ích</h5>
                    <ul>
                        <li><a href="#">Trang chủ</a></li>
                        <li><a href="#">Về chúng tôi</a></li>
                        <li><a href="#">Dịch vụ</a></li>
                        <li><a href="#">Điều khoản</a></li>
                        <li><a href="#">Chính sách bảo mật</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 footer-contact text-center text-md-start">
                    <h5>Liên hệ</h5>
                    <p>
                        123 Đường ABC <br>
                        Quận XYZ, TP. HCM<br>
                        Việt Nam <br><br>
                        <strong>Phone:</strong> +84 123 456 789<br>
                        <strong>Email:</strong> info@joblex.vn<br>
                    </p>
                </div>
            </div>

            <div class="footer-bottom text-center pt-4 mt-4">
                © @DateTime.Now.Year <strong><span>Hệ Thống Tìm Việc JOBLEX</span></strong>. All Rights Reserved
            </div>
        </div>
    </footer>

    <!-- Bootstrap Bundle JS (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>