                    @* <a asp-action="PheDuyetDoanhNghiep" asp-controller="Admin" class="btn btn-light btn-sm">Xem chi tiết</a> *@
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Người dùng hoạt động</div>
                <div class="card-body">
                    <h5 class="card-title">[Số lượng]</h5> @* TODO: Thêm logic lấy số lượng *@
                    <p class="card-text">Tổng số người dùng đang hoạt động trên hệ thống.</p>
                     @* <a asp-action="QuanLyNguoiDung" asp-controller="Admin" class="btn btn-light btn-sm">Quản lý</a> *@
