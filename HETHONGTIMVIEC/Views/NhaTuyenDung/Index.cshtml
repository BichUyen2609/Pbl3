@model HeThongTimViec.Models.HoSoDoanhNghiep
@{
    ViewData["Title"] = "Bảng điều khiển Nhà tuyển dụng";
    // Layout = "_NhaTuyenDungLayout"; // Layout riêng nếu có
}

<div class="container mt-4">
    <h1><i class="fas fa-building me-2"></i>@ViewData["Title"]</h1>
    <hr />

    @if (Model != null)
    {
        <div class="alert alert-info">
            Chào mừng trở lại, <strong>@Model.TenCongTy</strong>!
        </div>

        <div class="row">
            <div class="col-md-6">
                <h4>Thông tin nhanh</h4>
                <ul>
                    <li>Tên công ty: @Model.TenCongTy</li>
                    <li>Email liên hệ: @Model.NguoiDung?.Email</li>
                    <li>Trạng thái xác minh: @(Model.DaXacMinh ? "Đã xác minh" : "Chưa xác minh")</li>
                    <li>Số tin đang đăng: [Số lượng] @* TODO: Thêm logic đếm tin *@ </li>
                </ul>
                 @* Nút chức năng nhanh *@
                 @* <a asp-action="DangTinTuyenDung" asp-controller="NhaTuyenDung" class="btn btn-primary me-2">Đăng tin mới</a>
                 <a asp-action="QuanLyTinDang" asp-controller="NhaTuyenDung" class="btn btn-secondary me-2">Quản lý tin đăng</a>
                 <a asp-action="HoSoCongTy" asp-controller="NhaTuyenDung" class="btn btn-info">Hồ sơ công ty</a> *@
            </div>
             <div class="col-md-6">
                 <h4>Ứng viên mới</h4>
                  @* TODO: Hiển thị danh sách ứng viên mới ứng tuyển (nếu có) *@
                 <p>Chưa có ứng viên mới.</p>
             </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Không thể tải thông tin hồ sơ nhà tuyển dụng.
        </div>
    }
</div>